{
  "name": "uazapi/sdk",
  "description": "SDK do UazApi para integração com APIs usando Saloon",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "euventura",
      "email": "euventura@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "saloonphp/saloon": "^3.0",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "UazApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "UazApi\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  }
}